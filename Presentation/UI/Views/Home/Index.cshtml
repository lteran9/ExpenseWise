@{
   ViewData["Title"] = "Home Page";
}

<h1 class="display-4 text-center">Welcome</h1>
<hr />
<!-- What is ExpenseWise -->
<div class="row mb-5">
   <div class="col text-center">
      <h2 class="fw-bold">What is ExpenseWise?</h2>
      <p class="text-muted mt-3">
         ExpenseWise is an expense-sharing application that helps groups of people keep track of shared bills, IOUs, and balances without awkward math or uncomfortable conversations.
      </p>
   </div>
</div>

<!-- Features -->
<div class="row g-4">
   <div class="col-md-4">
      <div class="card h-100 shadow-sm">
         <div class="card-body text-center">
            <div class="feature-icon mb-3">💸</div>
            <h5 class="card-title">Track Shared Expenses</h5>
            <p class="card-text">
               Add expenses like rent, meals, utilities, or travel costs and specify who paid and who owes.
            </p>
         </div>
      </div>
   </div>

   <div class="col-md-4">
      <div class="card h-100 shadow-sm">
         <div class="card-body text-center">
            <div class="feature-icon mb-3">📊</div>
            <h5 class="card-title">Automatic Balances</h5>
            <p class="card-text">
               ExpenseWise calculates running balances so everyone always knows who owes whom.
            </p>
         </div>
      </div>
   </div>

   <div class="col-md-4">
      <div class="card h-100 shadow-sm">
         <div class="card-body text-center">
            <div class="feature-icon mb-3">👥</div>
            <h5 class="card-title">Groups & Friends</h5>
            <p class="card-text">
               Create groups for roommates, trips, couples, or coworkers, or track expenses with individuals.
            </p>
         </div>
      </div>
   </div>
</div>

<!-- More Features -->
<div class="row g-4 mt-4">
   <div class="col-md-6">
      <div class="card h-100 shadow-sm">
         <div class="card-body">
            <h5 class="card-title">Flexible Splitting</h5>
            <p class="card-text">
               Split expenses equally, by percentage, by shares, or with custom amounts to fit any situation.
            </p>
         </div>
      </div>
   </div>

   <div class="col-md-6">
      <div class="card h-100 shadow-sm">
         <div class="card-body">
            <h5 class="card-title">Settle Up Easily</h5>
            <p class="card-text">
               Mark payments as settled or use integrated payment options to clear balances quickly.
            </p>
         </div>
      </div>
   </div>
</div>