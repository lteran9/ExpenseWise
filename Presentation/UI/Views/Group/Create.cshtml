@model GroupViewModel
@{
   ViewData["Title"] = "Create";
}

<h1 class="display-4 text-center">Create Expense Group</h1>
<div class="card">
   <div class="card-body">
      <form asp-action="Create" method="post">
         @Html.AntiForgeryToken()
         @Html.ValidationSummary()

         <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" type="text" required />
         </div>
         <div class="mb-0">
            <label asp-for="FundTarget" class="form-label">Fund Target</label>
         </div>
         <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input asp-for="FundTarget" class="form-control" type="text" required />
         </div>
         <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" required />
         </div>
         <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" required />
         </div>
         <div class="d-grid d-md-block text-md-end mb-3">
            <button type="submit" class="btn btn-primary">Create</button>
         </div>
         <div class="d-grid d-md-block text-md-end">
            <a href="@Url.Action("Index", "Group")" class="btn btn-secondary">Back</a>
         </div>

         <input asp-for="OwnerId" type="hidden" />
      </form>
   </div>
</div>